{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-service",
  "projects": {
    "api-service": {
      "type": "application",
      "root": "apps/api-service",
      "entryFile": "main",
      "sourceRoot": "apps/api-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-service/tsconfig.app.json"
      }
    },
    "cron-service": {
      "type": "application",
      "root": "apps/cron-service",
      "entryFile": "main",
      "sourceRoot": "apps/cron-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cron-service/tsconfig.app.json"
      }
    },
    "vn-direct-integration": {
      "type": "library",
      "root": "libs/vn-direct-integration",
      "entryFile": "index",
      "sourceRoot": "libs/vn-direct-integration/src",
      "compilerOptions": {
        "tsConfigPath": "libs/vn-direct-integration/tsconfig.lib.json"
      }
    },
    "stock-backend": {
      "type": "application",
      "root": "apps/stock-backend",
      "entryFile": "main",
      "sourceRoot": "apps/stock-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stock-backend/tsconfig.app.json"
      }
    }
  }
}
